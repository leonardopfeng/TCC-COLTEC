{% extends 'layouts/dashboard.html.twig' %}


{% block title %}| Pessoas | Cadastrar{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="/dist/css/iziToast.min.css">
{% endblock %}

{% block breadcrumb %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Pessoas
                        <small>Cadastrar</small></h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
                        <li class="breadcrumb-item active">Pessoa</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

{% endblock %}


{% block content %}
    <section class="content">

        <div class="row">
            <div class="col-12">

                <div class="card card-primary">
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" action="/pessoas/salvarcadastrar" method="post" class="jsonForm">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="nome">Nome</label>
                                <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome" required>
                            </div>

                            <div class="form-group">
                                <label for="telefone">Telefone</label>
                                <input type="text" class="form-control" id="telefone" name="telefone" placeholder="Telefone" required>
                            </div>

                            <div class="form-group">
                                <label for="tipo">Tipo</label>
                                <select class="form-control" id="tipo" name="tipo" required>
                                    <option value="">- Selecione -</option>
                                    <option value="admin">Admin</option>
                                    <option value="personal">Personal</option>
                                    <option value="cliente">Cliente</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="usuario">Usuario</label>
                                <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Usuario" required>
                            </div>

                            <div class="form-group">
                                <label for="senha">Senha</label>
                                <input type="password" class="form-control" id="senha" name="senha" placeholder="Senha" required>
                            </div>

                            <div class="form-group">
                                <label for="confsenha">Confirmação da senha</label>
                                <input type="password" class="form-control" id="confsenha" name="confsenha" placeholder="Repita a senha" required>
                            </div>
                            <div id="personal" style="display: none">
                                personal
                            </div>
                            <div id="admin" style="display: none">
                                admin
                            </div>
                            <div id="cliente" style="display: none">
                                cliente
                            </div>



                        </div>
                        <!-- /.box-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Salvar</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
        <!-- /.row -->
    </section>

{% endblock %}



{% block javascriptPlugins %}
    <script src="/dist/js/jquery.form.js"></script>
    <script src="/dist/js/iziToast.min.js"></script>
{% endblock %}

{% block jquery %}
    <script>
        $(document).ready(function(){
            $('.jsonForm').ajaxForm({
                dataType:  'json',

                success:   function(d){
                    if (d.status==0){
                        iziToast.error({
                            message: d.mensagem
                        });
                    }else{
                        iziToast.success({
                            message: d.mensagem
                        });
                        $('.jsonForm').trigger("reset");
                    }
                }

            });

            $("#tipo").on("change", function (){
               switch ($(this).val()){
                   case 'admin':
                       $("#admin").show();
                       $("#personal").hide();
                       $("#cliente").hide();
                       break;
                   case 'personal':
                       $("#admin").hide();
                       $("#personal").show();
                       $("#cliente").hide();
                       break;
                   case 'cliente':
                       $("#admin").hide();
                       $("#personal").hide();
                       $("#cliente").show();
                       break;
               }
            });
        });
    </script>
{% endblock %}

{% block javascript %}
{% endblock %}