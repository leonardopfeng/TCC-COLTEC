{% extends 'layouts/dashboard.html.twig' %}



{% block title %}| Cadastro Treibnos{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="/dist/css/iziToast.min.css">

    <style>
        .list-group-item {
            position: relative;
            display: block;
            padding: .75rem 1.25rem;
            margin-bottom: -1px;
            background-color: #fff;
            border: 1px solid rgba(0,0,0,.125);
        }
    </style>
{% endblock %}

{% block breadcrumb %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Treino
                        <small>Cadastrar</small></h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
                        <li class="breadcrumb-item active">Treino</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

{% endblock %}

{% block content %}

<div class="d-flex">
    <div class="list-group col-5" id="listaEsquerda">
        <div class="list-group-item">Item 1.1 1</div>
        <div class="list-group-item">Item 1.2</div>
        <div class="list-group-item">Item 1.3</div>
        <div class="list-group-item">Item 1.4</div>
        <div class="list-group-item">Item 1.5</div>
    </div>

    <div class="list-group col-7">
        {% for grupo in grupomuscular %}
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            {{ grupo.nome }}
                        </button>
                    </h5>
                </div>

                <div id="listaDireita" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                    {% for exercicio in grupomuscular %}
                    <div class="list-group-item">
                        {{ grupo.nome_exercicio }}
                    </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}



{% block javascriptPlugins %}
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.6.0/Sortable.js"></script>

    <script type="text/javascript">
        new Sortable(listaDireita, {
            group: {
                name: 'shared',
                pull: 'clone',
                put: false // Do not allow items to be put into this list
            },
            animation: 150,
            sort: true // To disable sorting: set sort to false
        });

        new Sortable(listaEsquerda, {
            group: 'shared',
            animation: 150
        });
    </script>

{% endblock %}

{% block jquery %}
    <script>
        $(document).ready(function(){
            $('.jsonForm').ajaxForm({
                dataType:  'json',

                success:   function(d){
                    if (d.status==0){
                        iziToast.error({
                            message: d.mensagem
                        });
                    }else{
                        iziToast.success({
                            message: d.mensagem
                        });
                        $('.jsonForm').trigger("reset");
                    }
                }

            });

        });

    </script>

{% endblock %}

