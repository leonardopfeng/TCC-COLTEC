{% extends 'layouts/dashboard.html.twig' %}


{% block title %} Exercícios do Treino | Listagem{% endblock %}
{% block stylesheet %}
    <link href="/dist/js/jquery.bootgrid.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/dist/css/iziToast.min.css">
{% endblock %}

{% block breadcrumb %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Exercícios do Treino
                        <small>Listagem</small></h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
                        <li class="breadcrumb-item active">Exercícios do Treino</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
{% endblock %}


{% block content %}
    <section class="content">

        <div class="row">
            <div class="col-12">
                <table id="grid-data" class="table table-condensed table-hover table-striped">
                    <thead>
                    <tr>
                        <th data-column-id="id_treino" >Código</th>
                        <th data-column-id="nome_exercicio" data-order="desc" data-sortable="true">Nome do Exercício</th>
                        <th data-column-id="serie" data-order="desc" data-sortable="true">Séries</th>
                        <th data-column-id="repeticao" data-order="desc" data-sortable="true">Repetições</th>
                        <th data-column-id="carga" data-order="desc" data-sortable="true">Carga</th>
                        <th data-column-id="commands" data-formatter="commands" data-sortable="false">Ações</th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
        <!-- /.row -->
    </section>

{% endblock %}



{% block javascriptPlugins %}
    <script src="/dist/js/jquery.bootgrid.js"></script>
    <script src="/dist/js/jquery.bootgrid.fa.js"></script>
    <script src="/dist/js/iziToast.js"></script>
{% endblock %}

{% block jquery %}
    <script>
        var grid;
        $(document).ready(function(){
            grid = $("#grid-data").bootgrid({
                ajax: true,
                url: "/testesortable/bootgridExercicios"
            });
        });
    </script>


{% endblock %}

{% block javascript %}
{% endblock %}