{% extends 'layouts/dashboard.html.twig' %}



{% block title %} Treinos {% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="/dist/css/iziToast.min.css">

    <style>
        .row .card{
            margin: 10px 10px 10px 10px;
            align-content: center;
        }
        .row{
            align-items: center;
        }
    </style>

{% endblock %}

{% block breadcrumb %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Treinos
                    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item active">Treino</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

{% endblock %}

{% block content %}

<div class="row">
    <div class="col-md d-flex flex-wrap">
        {%  for treino in treinos  %}
            {% if(treino.status=='ativo') %}
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <p class="card-text">Treino: {{ treino.nome }}</p>
                    <a href="../testesortable/listaExercicios/{{ treino.idtreinos }}" class="btn btn-primary">Visualizar exerc√≠cios</a>
                </div>
            </div>
            {% else %}
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <p class="card-text">Treino: {{ treino.nome }}</p>
                            <a href="" class="btn btn-danger">Desativado</a>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</div>
{% endblock %}



{% block javascriptPlugins %}
    <script src="/dist/js/jquery.form.js"></script>
    <script src="/dist/js/iziToast.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.14.0/Sortable.min.js"></script>
{% endblock %}



{% block jquery %}
    <script>
        $(document).ready(function(){
            $('.jsonForm').ajaxForm({
                dataType:  'json',

                success:   function(d){
                    if (d.status==0){
                        iziToast.error({
                            message: d.mensagem
                        });
                    }else{
                        iziToast.success({
                            message: d.mensagem
                        });
                        $('.jsonForm').trigger("reset");
                    }
                }

            });

        });

    </script>

{% endblock %}

{% block javascript %}
{% endblock %}